\def\NT@fonts{
  \bfseries%
  \NTK@fontsize%
  \setmonofont{\NTK@font}%
  \ttfamily%
  \setlength{\parindent}{0pt}%
  \setlength{\parskip}{-0.9pt}%
}

\newenvironment{nodetreeexample}[1][]{
  \setkeys{NT}{#1}
  \NT@colors
  \begin{mdframed}[
    linecolor=black,
    backgroundcolor=NTbackground,
    fontcolor=NTfont,
  ]%
  \NT@fonts
}{
  \end{mdframed}%
}

\newcommand{\nodetreeterminalemulator}[2][]{
  \setkeys{NT}{#1}
  \begin{nodetreeexample}
  \input{#2.nttex}
  \end{nodetreeexample}
}

